<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/ibPriority"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/ic_idea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/green" />

    <EditText
        android:id="@id/etIdea"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/ibPriority"
        app:layout_constraintBottom_toBottomOf="@id/ibPriority"
        android:hint="Запишите идею:"/>

    <ImageButton
        android:id="@+id/ibDone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/ic_done"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@+id/etIdea"
        app:layout_constraintBottom_toBottomOf="@+id/etIdea"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvIdeas"
        android:layout_width="0dp"
        android:layout_height="600dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etIdea" />



</androidx.constraintlayout.widget.ConstraintLayout>