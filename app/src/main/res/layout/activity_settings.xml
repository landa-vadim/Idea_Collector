<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">


    <TextView
        android:id="@+id/tvHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="PASSWORD SETTINGS"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/tvPasswordEnable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/cbPasswordEnable"
        app:layout_constraintStart_toStartOf="@id/cbPasswordEnable"
        android:text="Enables password access to the ideas"
        android:layout_marginStart="32dp"
        />

    <CheckBox
        android:id="@+id/cbPasswordEnable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layoutDirection="rtl"
        android:paddingLeft="32dp"
        android:text="Enble Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHead"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/bNewPassword"
        app:layout_constraintStart_toStartOf="@+id/bNewPassword"
        android:text="Password is SET!"
        android:layout_marginStart="32dp"
        />

    <Button
        android:id="@+id/bNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingLeft="32dp"
        android:fontFamily="sans-serif"
        android:text="New password and confirmation"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textDirection="firstStrong"
        android:textSize="14sp"
        android:typeface="normal"
        app:layout_constraintStart_toStartOf="@+id/cbPasswordEnable"
        app:layout_constraintTop_toBottomOf="@+id/cbPasswordEnable" />

    <TextView
        android:id="@+id/tvSortType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/bSortType"
        app:layout_constraintStart_toStartOf="@+id/bSortType"
        android:text="Priority"
        android:layout_marginStart="32dp"
        />

    <Button
        android:id="@+id/bSortType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingLeft="32dp"
        android:fontFamily="sans-serif"
        android:text="Sort type"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textDirection="firstStrong"
        android:textSize="14sp"
        android:typeface="normal"
        app:layout_constraintStart_toStartOf="@+id/cbPasswordEnable"
        app:layout_constraintTop_toBottomOf="@+id/bNewPassword" />

    <TextView
        android:id="@+id/tvTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/bTheme"
        app:layout_constraintStart_toStartOf="@+id/bTheme"
        android:text="Light"
        android:layout_marginStart="32dp"
        />

    <Button
        android:id="@+id/bTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingLeft="32dp"
        android:fontFamily="sans-serif"
        android:text="Theme"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textDirection="firstStrong"
        android:textSize="14sp"
        android:typeface="normal"
        app:layout_constraintStart_toStartOf="@+id/cbPasswordEnable"
        app:layout_constraintTop_toBottomOf="@+id/bSortType" />

    <Button
        android:id="@+id/bExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingLeft="32dp"
        android:fontFamily="sans-serif"
        android:text="Exit"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textDirection="firstStrong"
        android:textSize="14sp"
        android:typeface="normal"
        app:layout_constraintStart_toStartOf="@+id/cbPasswordEnable"
        app:layout_constraintTop_toBottomOf="@+id/bTheme" />


</androidx.constraintlayout.widget.ConstraintLayout>